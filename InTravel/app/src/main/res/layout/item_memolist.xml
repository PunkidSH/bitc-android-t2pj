<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- FloatingActionButton positioned at the top-right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMemoview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        app:backgroundTint="@color/yellow400"
        app:srcCompat="@drawable/baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Memo Title positioned below the FloatingActionButton -->
    <TextView
        android:id="@+id/mTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="메모 제목"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMemoview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnMemoview"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <!-- Choice Date positioned below Memo Title -->
    <TextView
        android:id="@+id/choiceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.00.00"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/mTitle"
        app:layout_constraintTop_toBottomOf="@id/mTitle"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>