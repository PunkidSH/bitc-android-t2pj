<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/pinColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_red"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_red" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_orange"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_orange" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_yellow"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_yellow" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_green"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_green" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_cyan"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_cyan" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_blue"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_blue" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_purple"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_purple" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/choicePinColor_magenta"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/dot_magenta" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtPinName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="설명을 입력해 주세요"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinColor" />

</androidx.constraintlayout.widget.ConstraintLayout>