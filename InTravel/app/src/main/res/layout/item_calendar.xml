<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".MainActivity_calendar">

    <!-- 여행 관련 아이콘 -->
    <ImageView
        android:id="@+id/iv_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/yellow400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 여행 제목 -->
    <TextView
        android:id="@+id/trav_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="여행 제목"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 여행 날짜 -->
    <TextView
        android:id="@+id/tv_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="날짜 : 2024-09-17 ~ 2024-09-30"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/trav_title"
        app:layout_constraintTop_toBottomOf="@id/trav_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 카테고리 -->
    <TextView
        android:id="@+id/tv_cate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="카테고리 : 휴가"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_dates"
        app:layout_constraintTop_toBottomOf="@id/tv_dates"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 완료 여부 -->
    <TextView
        android:id="@+id/tv_complete_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="진행 상태 : 진행중"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_cate"
        app:layout_constraintTop_toBottomOf="@id/tv_cate"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>