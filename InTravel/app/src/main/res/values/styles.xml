<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 앱에서 사용할 기본 색상 참조 -->
        <item name="colorPrimary">@color/blue100</item>
        <item name="colorPrimaryDark">@color/blue200</item>
        <item name="colorAccent">@color/pink100</item>
    </style>

    <!-- Custom style for the CalendarView -->
    <style name="CalenderViewCustom" parent="Widget.MaterialComponents.MaterialCalendar">
        <!-- 상태바 및 배경 -->
        <item name="android:statusBarColor">@color/blue200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/white</item> <!-- 캘린더 배경 -->
        <item name="android:textColor">@color/black</item> <!-- 기본 텍스트 색상 -->
    </style>

    <!-- Date Text Appearance (for selected date text in CalendarView) -->
    <style name="CalenderViewDateCustomText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item> <!-- 날짜 텍스트 색상 -->
        <item name="android:textSize">16sp</item> <!-- 날짜 텍스트 크기 -->
    </style>

    <!-- Week Day Text Appearance (for weekday labels in CalendarView) -->
    <style name="CalenderViewWeekCustomText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/green400</item> <!-- 요일 텍스트 색상 -->
        <item name="android:textSize">14sp</item> <!-- 요일 텍스트 크기 -->
    </style>
</resources>